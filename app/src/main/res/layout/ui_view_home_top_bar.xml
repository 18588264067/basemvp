<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/topbar_height"
    android:padding="10dip"
    android:background="@color/wallow_color">


    <ImageView
        android:layout_width="370px"
        android:layout_height="48px"
        android:layout_centerVertical="true"
        android:src="@drawable/bg_home_top_bar_shape"
        android:layout_marginLeft="20px"/>

    <TextView
        android:id="@+id/tv_top_bar_title"
        android:layout_width="390px"
        android:layout_height="48px"
        android:layout_centerVertical="true"
        android:textColor="@color/normaltextblack"
        android:gravity="center_vertical"
        android:text="菜鸟旺旺-深圳张三门店"
        android:layout_marginLeft="80px" />



    <ImageView
        android:id="@+id/iv_top_bar_msg"
        android:layout_width="36px"
        android:layout_height="36px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ico_xiaoxi"
        android:layout_marginRight="10px"/>


    <ImageView
        android:id="@+id/iv_top_bar_right"
        android:layout_width="36px"
        android:layout_height="36px"
        android:layout_centerVertical="true"
        android:src="@drawable/ico_home_saoma_icon"
        android:layout_toLeftOf="@+id/iv_top_bar_msg"
        android:layout_marginRight="38px"/>

    <TextView
        android:id="@+id/msg_point"
        android:layout_width="24px"
        android:layout_height="24px"
        android:background="@drawable/ico_topbar_warn_dot"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3px"
        android:gravity="center"
        android:textSize="20px"
        android:textColor="@color/white"
        android:text="2"/>


    <ImageView
        android:id="@+id/iv_top_bar_left"
        android:layout_width="68px"
        android:layout_height="68px"
        android:layout_centerVertical="true"
        android:src="@drawable/ico_home_touxiang"/>

</RelativeLayout>